{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "file=\"$TOOL_INPUT_path\"; if echo \"$file\" | grep -qE '\\.(vue|ts|js)$'; then npx eslint --no-error-on-unmatched-pattern \"$file\" 2>/dev/null || echo 'ESLint warnings found'; fi",
            "timeout": 15
          },
          {
            "type": "command",
            "command": "bash .claude/check-closing-and-cleanup.sh \"$TOOL_INPUT_path\"",
            "timeout": 5,
            "async": true,
            "statusMessage": "Checking for session close..."
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read",
      "Grep",
      "Glob",
      "Npm run lint",
      "Npm run lint:fix",
      "Npm run typecheck",
      "Npm run test",
      "Npm run dev",
      "Npm run build",
      "Npx eslint",
      "Npx prettier",
      "Npx nuxi",
      "Npx supabase",
      "Git status",
      "Git add",
      "Git commit",
      "Git branch",
      "Git checkout",
      "Git log",
      "Git diff"
    ]
  }
}
