{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "file=\"$TOOL_INPUT_path\"; if echo \"$file\" | grep -qE '\\.(vue|ts|js)$'; then npx eslint --no-error-on-unmatched-pattern \"$file\" 2>/dev/null || echo '{\"feedback\": \"⚠️ ESLint warnings/errors found. Run /project:fix-errors to resolve.\"}'; fi",
            "timeout": 15
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read",
      "Grep",
      "Glob",
      "npm run lint",
      "npm run lint:fix",
      "npm run typecheck",
      "npm run test",
      "npm run dev",
      "npm run build",
      "npx eslint",
      "npx prettier",
      "npx nuxi",
      "npx supabase",
      "git status",
      "git add",
      "git commit",
      "git branch",
      "git checkout",
      "git log",
      "git diff"
    ]
  }
}
